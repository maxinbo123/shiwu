<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd        http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">
	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="orderservice" />

	<dubbo:registry protocol="zookeeper" address="172.30.66.155:2181,172.30.66.155:2182,172.30.66.155:2183" />
	<!-- 用dubbo协议在20880端口暴露服务，一个项目需要一个端口 -->
	<dubbo:protocol name="dubbo" port="8187" dispatcher="all" threadpool="fixed" threads="2000"/>


	<bean id="tccOrderService"
		  class="com.example.orderservice.service.TccOrderServiceImpl"/>
	<dubbo:service
			interface="com.example.commfacade.service.TccOrderService"
			ref="tccOrderService" version="1.0"
			group="" timeout="5000"/>
</beans>
